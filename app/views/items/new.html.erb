<!--breadcrumb start-->
<div class="breadcrumb-wrapper">
    <div class="container">
        <h1>Ajouter une nouvelle photo dans notre boutique</h1>
    </div>
</div>
<div class="space-60"></div>
  <div class="row">
      <div class="col-md-8">
          <div class="sky-form-login">
              <%= form_tag (items_path), multipart: true do %>

                  <div class="row">
                      <div class="field input">
                        <%= label_tag 'title', "Titre :" %>
                        <%= text_field_tag(:title) %>
                      </div>
                      <br>
                      <div class="field input">
                        <%= label_tag 'description', "Description :"  %>
                        <%= text_area_tag(:description) %>
                      </div>
                      <br>
                      <div class="field input">
                        <%= label_tag 'price', "Prix souhaitÃ© (en euros):"  %>
                        <%= number_field_tag(:price) %>
                      </div>
                      <br>
                      <div class="field input">
                        <%= label_tag 'image', "Lien de l'image" %>
                        <%= file_field_tag(:item_image) %>
                      </div>
                      <br><br>
                      <p> <%= submit_tag 'Valider', class: "btn btn-primary"%></p>
                  </div>

              <% end %>
          </div>
      </div>
  </div>
</div>
