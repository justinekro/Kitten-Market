<div class="breadcrumb-wrapper">
    <div class="container">
        <h1>Ajouter une nouvelle photo dans la boutique de photos de chatons trop mignons</h1>
    </div>
</div>

<% if current_user && current_user.admin? %>
<div class="space-60"></div>
  <div class="row">
      <div class="col-md-8">
          <div class="sky-form-login">
              <%= form_tag (items_path), multipart: true do %>
              <% if @item.errors.any? %>
              <div id="error_explanation">
                <h2>
                  <%= pluralize(@item.errors.count, "error") %> prohibited
                  this user from being saved:
                </h2>
                  <% @item.errors.full_messages.each do |msg| %>
                    <p><%= msg %></p>
                  <% end %>
              </div>
            <% end %>


                  <div class="row">
                      <div class="field input">
                        <%= label_tag 'title', "Titre :" %>
                        <%= text_field_tag(:title) %>
                      </div>
                      <br>
                      <div class="field input">
                        <%= label_tag 'description', "Description :"  %>
                        <%= text_area_tag(:description) %>
                      </div>
                      <br>
                      <div class="field input">
                        <%= label_tag 'price', "Prix souhaité (en euros):"  %>
                        <%= number_field_tag(:price) %>
                      </div>
                      <br>
                      <div class="field input">
                        <%= label_tag 'image', "Lien de l'image" %>
                        <%= file_field_tag(:item_image) %>
                      </div>
                      <br><br>
                      <p> <%= submit_tag 'Valider', class: "btn btn-primary"%></p>
                  </div>

              <% end %>
          </div>
      </div>
  </div>
</div>
<% else %>
<div class="space-40"></div>

<p> Vous devez être admin pour ajouter une photo dans la base de données </p>
<% end %>
