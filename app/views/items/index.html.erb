<div class='space-60'></div>
<!--new arrivals-->
<section class="new-arrivals">
	<div class="">
	    <h2 class="section-heading">Nouveautés de la semaine</h2>
	    <!--owl carousel-->
	    <div class="row">
	        <div id="owl-slider" class="col-md-12 owl-carousel owl-theme">
	            <% @items.first(5).each do |item| %>
	            <div class="item">
	            	<a href="/items/<%=item.id%>">
	                <div class="item_holder">
	                	<a href="/items/<%=item.id%>">
	                    <%= image_tag item.image_url, :class => "img-responsive" %></a>
	                    <div class="title">
	                        <h5> Photo de <%= item.title%></h5>
	                        <span class="price"><%= item.price/100%> €</span>
	                    </div>
	                    </a>
	                </div><!--item holder-->

	            </div> <!--item loop-->
	            <%end%>
	        </div>
	    </div>
	    <!--owl end-->
	</div>
</section>
<!--end new arrivals-->
<div class='space-60'></div>

<!--popular products-->
<section class="featured-products">
	<div class="">
	    <h2 class="section-heading">Toutes les photos de nos chatons</h2>

	 	<% @items.each do |item| %>
        <div class="col-sm-3 ">
            <div class="item_holder">
            	<a href="/items/<%=item.id%>">
				<% if item.image_url.nil? %>
                    <%= image_tag item.item_image.url(:medium) %>
                    <% else %>
                    <%= image_tag item.image_url, class: "img-responsive", alt: 'photo de chat' %>
                     <% end %>
                </a>
                <div class="title">
                    <h5><%= item.title%></h5>
                    <p> <%= item.description%> </p>
										<div class="price_and_cart">
											<span class="price"><%= item.price/100%>€</span>
											<div class="add-buttons">
													<a href="/items/add/<%=item.id%>" data-toggle="tooltip" data-placement="top" title="Ajouter un élément au panier" class="btn btn-skin"><i class="fas fa-cart-arrow-down"></i></a>
											</div>
										</div>
								</div>

            </div><!--item holder-->
        </div><!--col end-->
		<% end %>
	</div>
</section>
<!--end Popular products-->


<%= javascript_include_tag "owlcarousel.js", 'data-turbolinks-track' => true  %>
<%= javascript_include_tag "owlcarousel.min.js", 'data-turbolinks-track' => true  %>
