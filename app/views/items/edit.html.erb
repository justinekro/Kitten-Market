<div class="breadcrumb-wrapper">
    <div class="container">
        <h1>Modifier la photo</h1>
    </div>
</div>

<% if current_user && current_user.admin? %>
<div class="space-60"></div>
  <div class="row">
      <div class="col-md-8">
          <div class="sky-form-login">
              <%= form_tag item_path(@item), method: :put, multipart: true do %>

                  <div class="row">
                      <div class="field input">
                        <%= label_tag 'title', "Titre :" %>
                        <%= text_field_tag(:title, @item.title) %>
                      </div>
                      <br>
                      <div class="field input">
                        <%= label_tag 'description', "Description :"  %>
                        <%= text_area_tag(:description, @item.description) %>
                      </div>
                      <br>
                      <div class="field input">
                        <%= label_tag 'price', "Prix souhaité (en euros):"  %>
                        <%= number_field_tag(:price, @item.price) %>
                      </div>
                      <br>
                      <div class="field input">
                        <%= label_tag 'image', "Lien de l'image" %>
                        <%= file_field_tag(:item_image) %>
                      </div>
                      <br><br>
                      <p> <%= submit_tag 'Valider', class: "btn btn-primary"%></p>
                  </div>

              <% end %>
          </div>
      </div>
  </div>
</div>
<% else %>
<div class="space-40"></div>

<p> Vous devez être admin pour modifier une photo dans la base de données </p>
<% end %>
