

<!-- Below source code from the bootstrap template -->
<!--breadcrumb start-->
<div class="breadcrumb-wrapper">
    <div class="container">
        <h1>Login or Register</h1>
    </div>
</div>
<!--end breadcrumb-->

<!--form start, Juju's form in bootstrap template-->
<div class="space-60"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="sky-form-login">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>
                    <h3 class="text-left"><i class="fa fa-user"></i>Créez votre compte</h3>
                    <fieldset>          
                        <section>
                            <div class="field input">
                                <i class="icon-append fa fa-user"></i>
                                <br />
                                <%= f.text_field :email, autofocus: true, placeholder: "Firstname", autocomplete: "Firstname" %>
                                <b class="tooltip tooltip-bottom-right">Enter firstname</b>
                            </div>
                        </section>

                        <section>
                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-envelope-o"></i>
                                <br />
                                <%= f.text_field :name, autofocus: true, placeholder: "Name",autocomplete: "name" %>
                                <b class="tooltip tooltip-bottom-right">Enter name</b>
                            </div>
                        </section>

                        <section>
                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.date_field :birthdate, autofocus: true, placeholder: "birthdate", autocomplete: "birthdate" %>
                                <b class="tooltip tooltip-bottom-right">Enter birthdate</b>
                            </div>
                        </section>

                        <section>
                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.text_field :address, autofocus: true, placeholder: "address", autocomplete: "address" %>
                                <b class="tooltip tooltip-bottom-right">Please enter your address</b>
                            </div>
                        </section>

                        <section>
                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.text_field :postal_code, autofocus: true, placeholder: "Postal code", autocomplete: "postal code" %>
                                <b class="tooltip tooltip-bottom-right">Please enter your postal code</b>
                            </div>
                        </section>

                        <section>
                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.text_field :city, autofocus: true, placeholder: "City", autocomplete: "city" %>
                                <b class="tooltip tooltip-bottom-right">Please enter your city</b>
                            </div>
                        </section>

                        <section>
                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.text_field :country, autofocus: true, placeholder: "Country", autocomplete: "country" %>
                                <b class="tooltip tooltip-bottom-right">Please enter your country</b>
                            </div>
                        </section>

                        <section>
                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.text_field :email, autofocus: true, placeholder: "Email", autocomplete: "email" %>
                                <b class="tooltip tooltip-bottom-right">Please enter your email</b>
                            </div>
                        </section>

                        <section>
                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                                <% end %><br />
                                <%= f.password_field :password, placeholder: "Password", :id => 'password', autocomplete: "off" %>
                                <b class="tooltip tooltip-bottom-right">Don't forget your password</b>
                            </div>
                        </section>

                        <section>
                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.password_field :password_confirmation,placeholder: "Confirm password", autocomplete: "off" %>
                                <b class="tooltip tooltip-bottom-right">Please confirm your password</b>
                            </div>
                        </section>

                        <section>
                            <!-- change in form_tag -->
                              <label class="checkbox"><input type="checkbox" name="subscription" id="subscription"><i></i>I want to receive news and  special offers</label>
                              <label class="checkbox"><input type="checkbox" name="terms" id="terms"><i></i>I agree with the Terms and Conditions</label>
                        </section>
                    </fieldset>
                        
                    <footer>
                        <%= f.submit "Sign up", class: "actions btn btn-skin btn-lg" %>
                    </footer>
                    
                    <% end %>  
                <!--form end-->
            </div>
        </div><!--col end-->
        <div class="col-md-6">
            <div class="login-register-aside-box">
                <h3>Vous avez déjà un compte ?</h3>
                <p>
                    Nam libero tempore, cum soluta nobis est eligendi optio cumque nihil impedit quo minus id quod maxime placeat facere possimusNam libero tempore, cum soluta nobis est eligendi optio cumque nihil impedit quo minus id quod maxime placeat facere possimus.
                </p>
                <br>
                <%= link_to "Connectez-vous", new_user_session_path, class: "btn btn-light-dark btn-lg" %>
            </div>
        </div>
    </div>
</div>

