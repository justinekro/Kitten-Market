<!--breadcrumb start-->
<div class="breadcrumb-wrapper">
    <div class="container">
        <h1>Inscrivez-vous !</h1>
    </div>
</div>
<!--end breadcrumb-->

<!--form start, Juju's form in bootstrap template-->
<div class="space-60"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="sky-form-login">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>
                    <h3 class="text-left">Créez votre compte</h3>
                    <fieldset>          
                            <div class="field input                     ">
                                <br />
                                <%= f.text_field :email, autofocus: true, placeholder: "Prénom", autocomplete: "Firstname" %>
                            </div>

                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-envelope-o"></i>
                                <br />
                                <%= f.text_field :name, autofocus: true, placeholder: "Nom",autocomplete: "name" %>
                            </div>

                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.date_field :birthdate, autofocus: true, placeholder: "Date de naissance", autocomplete: "birthdate" %>
                            </div>

                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.text_field :address, autofocus: true, placeholder: "Adresse", autocomplete: "address" %>
                            </div>

                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.text_field :postal_code, autofocus: true, placeholder: "Code postal", autocomplete: "postal code" %>
                            </div>

                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.text_field :city, autofocus: true, placeholder: "Ville", autocomplete: "city" %>
                            </div>

                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.text_field :country, autofocus: true, placeholder: "Pays", autocomplete: "country" %>
                            </div>

                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.text_field :email, autofocus: true, placeholder: "Email", autocomplete: "email" %>
                            </div>

                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                                <% end %><br />
                                <%= f.password_field :password, placeholder: "Mot de passe", :id => 'password', autocomplete: "off" %>
                            </div>

                            <div class="field input">
                                <!-- Icone à changer -->
                                <i class="icon-append fa fa-lock"></i>
                                <br />
                                <%= f.password_field :password_confirmation,placeholder: "Confirmation", autocomplete: "off" %>
                            </div>
                    </fieldset>
                    
                    <%= f.submit "Je m'inscris", class: "actions btn btn-skin btn-lg", style: "margin-top: 20px;" %>
                    
                    <% end %>  
                <!--form end-->
            </div>
        </div><!--col end-->
        <div class="col-md-6">
            <div class="login-register-aside-box">
                <h3>Vous avez déjà un compte ?</h3>
                <p>
                  C'est le moment de vous connecter pour accéder à votre panier, vos préférences et vos futures photos de chatons !
                </p>
                <br>
                <%= link_to "Connectez-vous", new_user_session_path, class: "btn btn-light-dark btn-lg" %>
            </div>
        </div>
    </div>
</div>
