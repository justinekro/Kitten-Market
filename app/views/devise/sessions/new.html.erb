<!--breadcrumb start-->
<div class="breadcrumb-wrapper">
    <div class="container">
        <h1>Login or Register</h1>
    </div>
</div>
    <!--end breadcrumb-->

<div class="space-60"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="sky-form-login">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <h3 class="text-left"><i class="fa fa-unlock"></i>Connectez-vous</h3>
                    <fieldset>
                        <section>
                            <div class="col col-8 field input">
                                <br />
                                <i class="icon-append fa fa-user"></i>
                                <%= f.email_field :email, autofocus: true, placeholder: "Your email", autocomplete: "email" %>
                            </div>
                        </section>

                        <section>
                            <div class="col col-8 field input">
                                <br />
                                <i class="icon-append fa fa-user"></i>
                                <%= f.password_field :password, placeholder: "Your password", autocomplete: "off" %>
                            </div>
                        </section>

                        <% if devise_mapping.rememberable? -%>
                            <div class="field">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                            </div>
                        <% end -%>
                    </fieldset>

                    <footer>
                        <div class="actions">
                            <%= f.submit "Log in", class: "button button-secondary modal-closer" %>
                        </div>
                    </footer>
                    <% end %>

                    <%= render "devise/shared/links" %>
                </div>
            </div>

            <div class="col-md-6">
                <div class="login-register-aside-box">
                    <h3>Pas encore inscrit ?</h3>
                    <p>
                        Nam libero tempore, cum soluta nobis est eligendi optio cumque nihil impedit quo minus id quod maxime placeat facere possimusNam libero tempore, cum soluta nobis est eligendi optio cumque nihil impedit quo minus id quod maxime placeat facere possimus.
                    </p>
                    <br>
                    <a href='register.html' class="btn btn-light-dark btn-lg">Register Now</a>
                </div>
                </div>
            </div>
        </div>
    <div class="space-60"></div>
</div>

