<!--breadcrumb start-->
<div class="breadcrumb-wrapper">
    <div class="container">
        <h1>Connectez-vous !</h1>
    </div>
</div>
    <!--end breadcrumb-->

<div class="space-60"></div>
    <div class="">
        <div class="row">
            <div class="col-md-8">
                <div class="sky-form-login">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <h3 class="text-left">Connectez-vous</h3>
                    <fieldset>
                        <section>
                            <div class="field input">
                                <%= f.label :"Email :" %>
                                <%= f.text_field :email, autofocus: true, placeholder: "Email", autocomplete: "email" %>
                            </div>
                        </section>

                        <section>
                            <div class="field input">
                                <%= f.label :"Mot de passe :" %>
                                <%= f.password_field :password, placeholder: "Mot de passe", autocomplete: "off" %>
                            </div>
                        </section>
                        <br>
                        <% if devise_mapping.rememberable? -%>
                            <div class="field">
                                <%= f.check_box :remember_me %>
                                <%= f.label "Souvenez-vous de moi !" %>
                            </div>
                        <% end -%>
                    </fieldset>

                    <div class="actions">
                    <%= f.submit "Je me connecte", class: "actions btn btn-skin btn-lg" %>
                    </div>
                    <% end %>

                    <%= render "devise/shared/links" %>
                </div>
            </div>

            <div class="col-md-4">
                <div class="login-register-aside-box">
                    <h3>Vous n'avez pas encore de compte ?</h3>
                    <p>
                       C'est le moment de s'inscrire pour bénéficier de toutes nos offres spéciales chatons trop mignons !
                    </p>
                    <br>
                    <%= link_to "Je m'inscris", new_user_registration_path, class: "btn btn-light-dark btn-lg"%>
                </div>
                </div>
            </div>
        </div>
    <div class="space-60"></div>
</div>
